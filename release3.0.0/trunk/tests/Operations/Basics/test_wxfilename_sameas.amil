#!/usr/bin/amilab

#SetDebugOn
#SetVerboseOn

NoMessageDialog(1)

# Hide main frame
ami.MainFrame.ShowWin(0)

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# test_wxfilename_sameas.amil
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check the following methods:
#                              - constructor
#                              - SameAs
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Constructor: MODE 0 (file=wx.wxFileName()).\n"
file=wx.wxFileName()

printn "Constructor: MODE 3 - a directory name, a file name, a file extension - (file1=wx.wxFileName(\"./\",\"test_wxfilename_sameas\",\"amil\")).\n"
file1=wx.wxFileName("./","test_wxfilename_sameas","amil")

print "Get the full path (file.GetFullPath()):\n"
VAL = file.GetFullPath()

print "\t The full path: - %1% -\n" % VAL

print "Get the full path (file1.GetFullPath()):\n"
VAL = file1.GetFullPath()

print "\t The full path: - %1% -\n" % VAL

printn "Compares file with file1 (file.SameAs(file1)).\n"
if (file.SameAs(file1)) {
  OK=0
  printn  "\nERROR: SameAs failed.\n"
} else  {
  printn  "\t Not equal.\n"
}

print "Set:\n"
print "\t Directory: \"./\"\n"
print "\t Name: \"test_wxfilename_sameas\"\n"
print "\t Ext: \"amil\"\n"

file.AssignDir("./")
file._SetName("test_wxfilename_sameas")
file.SetExt("amil")

VAL = file1.GetFullPath()

print "\t The full path: - %1% -\n" % VAL

printn "Compares file with file1 (file.SameAs(file1)).\n"
if (file.SameAs(file1)) {
  printn  "\t Equal.\n"
} else  {
  OK=0
  printn  "\nERROR: SameAs failed.\n"
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

#quit

