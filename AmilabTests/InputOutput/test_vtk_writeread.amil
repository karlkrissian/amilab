#!/usr/bin/amilab_2.0.3_release 

SetDebugOn

i = Image(FLOAT,2,2,2)
i = Xpos(i)
i.save "smallvolume.vtk"


m=mean(i)
printn "test_vtk_writeread.amil:"
printn boost_format("\t write: %1%") % (abs(m-0.5)<0.00000001)

j= Image "smallvolume.vtk"
d = mean((i-j)*(i-j))
printn boost_format("\t read: %1%") % (d<0.00000001)

quit
