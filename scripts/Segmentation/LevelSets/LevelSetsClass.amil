    //---------------------------------------------------
    proc ::Surface() {
    
      if (exists(::s0)) {
        if (exists(::s0_draw)) { ::s0_draw -= ::s0; }
        del ::s0
      }
      ::s0 = isosurf(::inls0,0.01)
      if (!exists(::s0_draw)) {
        show ::s0
      } else {
        ::s0_draw += ::s0
      }
      if (exists(::s1)) {
        ::s0_draw -= ::s1
        del ::s1
      }
      ::s1 = isosurf(::inls,0.01)
      ::s0_draw += ::s1
      if (exists(::viewer)) {
        ::viewer.setGLwin(&::s0_draw)
      }
    
    }
    
