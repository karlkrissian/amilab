    proc ::AddSphere() \
    {
      if (!exists(::inls))        { ::load_initial(); }
      if (exists(::viewer)) {
        _x = ::viewer.GetXPos() 
        _y = ::viewer.GetYPos()
        _z = ::viewer.GetZPos()
        print "cursor is at "
        print " %1% " % _x
        print " %1% " %_y
        print " %1% \n" % _z
        ::inls_backup = ::inls
        #global::AddBrightSphere_mm(&::inls,\
        #      _x,_y,_z,\
        #      ::sphere_radius,-1,1)
        ::AS.AddBrightSphere_mm(&::inls,\
              _x,_y,_z,\
              ::sphere_radius,-1,1)
        ::inls0 = ::inls
        ::UpdateViewer()
      } else {
        print "We have to show ::input and position de cursor at the sphere center (using mouse middle button) \n"
      }
    }
    
