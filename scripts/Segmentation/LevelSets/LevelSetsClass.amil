      if (::resname_addprob) {
        filename = filename + sprint("_mean%0.0f",::Imean) \
                            + sprint("_SD%0.2f",::Isd)
      }
      if (::resname_addtime) {
        filename = filename + sprint("_T%0.0f",::T)
      }
      filename = filename + ::result_filename_ext
      print "saving file "+filename+"\n"
      ::inls.save filename
    }
    
