    #-----------------------------------------
    proc ::CarotidExperiments_Vesselness() \
    {
    
      if (!::ves_downsample) {
        # trunk max intensities to  ::maxvesselint
        global::vesselness_input <<= global::input_cropped* (global::input_cropped<::maxvesselint)+\
                          (global::input_cropped>=::maxvesselint)*::maxvesselint
        global::mask <<= (UCHAR) ((global::input_cropped>::minvesselint)*\
                                     (global::input_cropped<::maxvesselint)*255)
      } else {
        # first downsample in X and Y
        global::vesselness_input <<= Resize(global::input_cropped, \
            global::input_cropped.tx/2,global::input_cropped.ty/2,\
            global::input_cropped.tz,1)
        global::mask <<= (UCHAR) ( (global::vesselness_input>::minvesselint)*\
                                      (global::vesselness_input<::maxvesselint)*255)
    
        global::vesselness_input = \
            global::vesselness_input*(global::vesselness_input<::maxvesselint)+\
            (global::vesselness_input>=::maxvesselint)*::maxvesselint
      }
      #::ML->input_name = "global::vesselness_input"
      #::ML->mask_name  = "global::mask"
      ::ML->set_input(global::vesselness_input)
      ::ML->set_mask(global::mask)
      ::ML->radmin = 0.5
      ::ML->radmax = 7
      ::ML->numrad = 7
      ::ML->mode = 1
      # Keep the 80% highest values along the boundary
      ::ML->keephighest = 80
      # save multiscale local maxima
      ::ML->local_maxima = 1
      ::ML->MultiLines_new
    }
    
