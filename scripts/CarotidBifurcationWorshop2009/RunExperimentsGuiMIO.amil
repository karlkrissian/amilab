    #-----------------------------------------
    proc ::CarotidExperiments_ReadVesselness() \
    {
      vfilename  = ::current_resultsdir+"\\vesselness_result.ami.gz"
    
      if (FileExists(vfilename)) {
        # 1. Save Level Set resulting image
        global::result <<= Image vfilename
        // check dimensions
        if ((global::result.tx!=global::input_cropped.tx)|| \
            (global::result.ty!=global::input_cropped.ty)|| \
            (global::result.tz!=global::input_cropped.tz)) {
          result_bak = global::result
          global::result <<= Image(FLOAT,::input_tx,::input_ty,::input_tz)
          global::result.settranslation(::input_trx,::input_try,::input_trz)
          global::result.setvoxelsize(global::input_cropped)
          global::result.putimage(result_bak)
          del result_bak
          global::result <<= global::result[global::input_cropped]
          message = boost_format("CarotidExperiments_ReadVesselness() \n File %1% wrong dimensions, image has been adapted ") % vfilename 
          if (!::nointeraction) {
            InfoDialog message
          } else {
            printn message
          }
        }
      } else {
        if (!::nointeraction) {
          InfoDialog boost_format("CarotidExperiments_ReadVesselness() \n File %1% does not exists ") % vfilename 
        }
      }

      vmfilename  = ::current_resultsdir+"\\vesselness_maxima.ami.gz"
    
      if (FileExists(vmfilename)) {
        # 1. Save Level Set resulting image
        global::maxima <<= Image vmfilename
        // check dimensions
        if ((global::maxima.tx!=global::input_cropped.tx)|| \
            (global::maxima.ty!=global::input_cropped.ty)|| \
            (global::maxima.tz!=global::input_cropped.tz)) {
          maxima_bak = global::maxima
          global::maxima <<= Image(FLOAT,::input_tx,::input_ty,::input_tz)
          global::maxima.settranslation(::input_trx,::input_try,::input_trz)
          global::maxima.setvoxelsize(global::input_cropped)
          global::maxima.putimage(maxima_bak)
          del maxima_bak
          global::maxima <<= global::maxima[global::input_cropped]
          message = boost_format("CarotidExperiments_ReadVesselness() \n File %1% wrong dimensions, image has been adapted ") % vmfilename 
          if (!::nointeraction) {
            InfoDialog message
          } else {
            printn message
          }
        }
      } else {
        if (!::nointeraction) {
          InfoDialog boost_format("CarotidExperiments_ReadVesselness() \n File %1% does not exists ") % vmfilename 
        }
      }

    }
    
    #-----------------------------------------
    proc ::CarotidExperiments_CreatePaths() \
    {
      SetStatusText("Creating paths ...")
      # load the shortest path script
      
      ::CIS->CheckInitialPoints(global::input_cropped,::sphereradii)
      if (!::nointeraction) {
        if (!exists(global::pt1_OK)) { InfoDialog "Discarded point 1"; }
        if (!exists(global::pt2_OK)) { InfoDialog "Discarded point 2"; }
        if (!exists(global::pt3_OK)) { InfoDialog "Discarded point 3"; }
      }

      # high vesselness is ok but we limit its strength??
      #global::SPspeed = -exp(-(ML_result*ML_result)/(25*25))+1
    
      if (exists(global::result)) {
        if (exists(::CP->prob)) {
          # ensure that CP_prob is maximum around local maxima
          if (exists(global::maxima)) {
            # threshold to get maxima positions
            maxima_neigh = (global::maxima>::mlmax_threshold)
            # dilate a little
            maxima_neigh = EDPdilate(maxima_neigh,1,0.25)

            ::speed <<=  max((maxima_neigh>=0.95)*maxima_neigh * global::result, \
                                      ::CP->prob*global::result)

          } else {
            ::speed <<= ::CP->prob * global::result
          }
        } else {
          if (!::nointeraction) {
            InfoDialog "prob not found, path based only on the Vesselness!"
          }
          ::speed <<= global::result
        }
      } else {
        InfoDialog "CarotidExperiments_Path1: no Vesselness image found" 
        ::speed <<= global::input_cropped
      }
    
      ::SP->init
      ::win.Update(-1)
    
      #::SP->input_name = "global::input_cropped"
      #::SP->speed_name = "::speed"
      ::SP->epsilon         = 0.01
      ::SP->maxcost         = 10000
      ::SP->step_size       = 0.01
      ::SP->maxlength       = 300
      ::SP->use_input_speed = 1
      ::SP->input_Imin      = ::minvesselint
      ::SP->input_Imax      = ::maxvesselint
      ::SP->input_speed     = 1
      
      #::SP->load_input()
      ::SP->set_input(global::input_cropped)
      ::SP->set_speed(::speed)
      #::SP->load_speed()
      ::win.Update(-1)
    
      ::SP->SetStartPointWorld(global::p1x,global::p1y,global::p1z)
    
      if (exists(global::pt2_OK)) \
      {
        SetStatusText(" Path from point 1 to point 2 ...")
        # path 1
        ::SP->SetEndPointWorld(global::p2x,global::p2y,global::p2z)
        ::SP->Run
        # path from Common to Internal Carotid Arteries
        if (exists(global::pathCI)) { del global::pathCI; }
        global::pathCI = global::path
        if (exists(global::pathCIs)) { del global::pathCIs; }
        global::pathCIs = SmoothLines(global::path)
      }
    
      if (exists(global::pt3_OK)) \
      {
        SetStatusText(" Path from point 1 to point 3 ...")
        # path 2
        ::SP->SetEndPointWorld(global::p3x,global::p3y,global::p3z)
        ::SP->Run
        # path from Common to External Carotid Arteries
        if (exists(global::pathCE)) { del global::pathCE; }
        global::pathCE = global::path
        if (exists(::pathCEs)) { del ::pathCEs; }
        ::pathCEs = SmoothLines(global::path)
      }
    
      SetStatusText("Creating paths ... done")
    }
    
    
