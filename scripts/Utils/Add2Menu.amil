#!/usr/bin/amilab

#
# Adding main Gui scripts to the menu
#


proc AddUtilsMenu() {
  for dir in  "Calculator" , "RemoveSpots"\
  {
    if FileExists(GetScriptsDir+"/Utils/"+dir+"/Add2Menu.amil") {
      func "/Utils/"+dir+"/Add2Menu.amil"
    } else {
      InfoDialog GetScriptsDir+"/Utils/"+dir+"/Add2Menu.amil does not exists"
    }
  }
}

AddUtilsMenu()
del AddUtilsMenu
