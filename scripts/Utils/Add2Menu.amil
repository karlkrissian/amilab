#!/usr/bin/amilab

#
# Adding main Gui scripts to the menu
#


proc AddUtilsMenu() {
  for dir in  "Calculator" , "Timer" , "RemoveSpots"\
  {
    if wx.wxFileName(GetScriptsDir+"/Utils/"+dir+"/Add2Menu.amil").FileExists() {
      func "/Utils/"+dir+"/Add2Menu.amil"
    } else {
      InfoDialog GetScriptsDir+"/Utils/"+dir+"/Add2Menu.amil does not exists"
    }
  }
}

AddUtilsMenu()
del AddUtilsMenu

if exists(global::scripts_toolbar) {
  global::scripts_toolbar.AddSeparator()
}
