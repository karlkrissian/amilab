#!/usr/bin/amilab_2.0.3_release 

#SetDebugOn

extension=".vtk"

# read test
i0 = Image "smallvolume"+extension
i = Image(FLOAT,2,2,2)
i = Xpos(i)

d = mean((i-i0)*(i-i0))
printn boost_format("\t ******* Read Test Result:  %1%") % (d<0.00000001)


# write test
i.save "smallvolume2"+extension
j= Image "smallvolume2"+extension
d = mean((i-j)*(i-j))
printn boost_format("\t ******* Write Test Result:  %1%") % (d<0.00000001)

#quit
