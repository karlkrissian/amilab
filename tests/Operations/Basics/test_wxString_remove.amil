printn "Create an object of class wxString(sString2 = wx.wxString(\"hello world !!!\")).\n"
sString2 = wx.wxString("hello world !!!")

printn "Removes the portion from 5 to the end of the string(sString2.Remove(5)).\n"
sString2.Remove(5)

VAL2=sString2.c_str()

printn "\t Returns the sString2 value: - %1% -\n" % VAL2

if(VAL2 != "hello") {
  OK = 0
  printn  "\nERROR: The string has not been removed."
}

