#!/usr/bin/amilab

#SetDebugOn
#SetVerboseOn

NoMessageDialog(1)

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# test_wxfilename_mkdir_rmdir.amil
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check the following methods:
#                              - constructor
#                              - Mkdir
#                              - Rmdir
#                              - AssignDir
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# TODO
printn "Constructor: MODE 0 (file=wx.wxFileName()).\n"
file=wx.wxFileName()

PATH="/tmp/KARL"

printn "\t The new path: - %1% -\n" % PATH

printn "\t Set the new path (file.AssignDir(PATH))\n"
file.AssignDir(PATH)

VAL = file.GetFullPath();
printn "\t The full path: - %1% -\n" % VAL

PERM=0777

printn "\t Creates the directory (file.Mkdirectory(PATH,777))\n"
if (file.Mkdirectory(PATH,PERM)) {
  OK=0;
  printn  "\nERROR: The Mkdir failed."
}

printn "\t Deletes the directory from the file system(file.Rmdirectory())\n"
if ((OK) && (file.Rmdirectory(PATH))) {
  OK=0;
  printn  "\nERROR: The Rmdir failed."
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

#quit

