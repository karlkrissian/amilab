#!/usr/bin/amilab

#SetDebugOn
#SetVerboseOn

NoMessageDialog(1)

# Hide main frame
ami.MainFrame.ShowWin(0)

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# test_wxString_setchar.amil
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check the following methods:
#                              - constructor
#                              - c_str
#                              - SetChar
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Create an object of class wxString(sString1 = wx.wxString()).\n"
sString1 = wx.wxString()

printn "Sets the character '1' at position 0 (sString1.SetChar(0,\"1\") --> FAILED: sString1 = empty string).\n"
sString1.SetChar(0,"1")

printn "Create an object of class wxString(sString2 = wx.wxString(\"hello world !!!\")).\n"
sString2 = wx.wxString("hello world !!!")

printn "Try to Set the string \"Pepe\" at position 6 (sString2.SetChar(6,\"Pepe\") --> FAILED: More than one character has passed) ).\n"
sString2.SetChar(6,"Pepe") 

printn "Try to Set the string \"H\" at position 0 (sString2.SetChar(0,\"H\")).\n"
sString2.SetChar(0,"H") 

printn "Try to Set the string \"W\" at position 6 (sString2.SetChar(6,\"W\")).\n"
sString2.SetChar(6,"W")

VAL2=sString2.c_str()

printn "\t Returns the sString2 value: - %1% -\n" % VAL2


if(VAL2 != "Hello World !!!"){
  OK = 0
  printn  "\nERROR: The character has not been added."
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

