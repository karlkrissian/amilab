#!/usr/bin/amilab

#SetDebugOn
#SetVerboseOn

NoMessageDialog(1)

# Hide main frame
ami.MainFrame.Show(0)

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# test_wxfilename_clear.amil
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check the following methods:
#                              - constructor
#                              - Clear
#                              - ClearExt
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Constructor: MODE 4 - a volume name, a directory name, a file name, a file extension - (file=wx.wxFileName(\"/\",\"tmp/\",\"karl\",\"txt\")).\n"
file=wx.wxFileName("/","tmp/","karl","txt")

VAL = file.GetFullPath();

printn "\t The full path: - %1% -\n" % VAL

print "Reset all components to default (file.Clear()):\n"
file.Clear()

VAL = file.GetFullPath();

printn "\t The full path: - %1% -\n" % VAL

if (VAL != "")  {
  OK=0;
  printn  "\nERROR: The Clear failed."
}

printn "\t *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** ***"

printn "Constructor: MODE 3 - a directory name, a file name, a file extension - (file2=wx.wxFileName(\"/tmp/\",\"karl\",\"txt\")).\n"
file2=wx.wxFileName("/tmp/","karl","txt")

VAL = file2.GetFullPath();

printn "\t The full path: - %1% -\n" % VAL

print "Removes the extension from the file name (file2.ClearExt()):\n"
file2.ClearExt()

VAL = file2.GetFullPath();

printn "\t The full path: - %1% -\n" % VAL

if (VAL != "/tmp/karl")  {
  OK=0;
  printn  "\nERROR: The Clear failed."
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

#quit

