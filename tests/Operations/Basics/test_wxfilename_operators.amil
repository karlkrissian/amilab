#!/usr/bin/amilab

#SetDebugOn
#SetVerboseOn

NoMessageDialog(1)

# Hide main frame
ami.MainFrame.Show(0)

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# test_wxfilename_operators.amil
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check the following methods:
#                              - constructor
#                              - assign operator
#                              - equal operator.
#                              - not equal operator.
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Constructor: MODE 3 - a directory name, a file name, a file extension - (file=wx.wxFileName(\"./\",\"test_wxfilename_sameas\",\"amil\")).\n"
file=wx.wxFileName("./","test_wxfilename_sameas","amil")

print "Get the full path (file.GetFullPath()):\n"
VAL = file.GetFullPath()

print "\t The full path: - %1% -\n" % VAL

printn "Assign operator (file1 = file).\n"
file1=file

print "Get the full path (file1.GetFullPath()):\n"
VAL1 = file1.GetFullPath()

print "\t The full path: - %1% -\n" % VAL1

if (VAL != VAL1) {
  OK=0;
  printn  "\nERROR: The file is not assigned."
}

print "Equal operator (file == file1):\n"
if (file == file1) {
  printn  "\t The files are equal."
} else {
  OK=0;
  printn  "\nERROR: The equal operator failed."
}

print "Reset all components to default (file.Clear()):\n"
file.Clear()

VAL = file.GetFullPath();

printn "\t The full path: - %1% -\n" % VAL

print "Not equal operator (file != file1):\n"
if (file != file1) {
  printn  "\t The files are not equal."
} else {
  OK=0;
  printn  "\nERROR: The not equal operator failed."
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

#quit

