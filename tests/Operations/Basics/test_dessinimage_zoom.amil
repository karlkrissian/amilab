func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Create initial image
func "SyntheticImages/CreateTorus/CreateTorusClass.amil"
CreateTorusClass ctobject

DIMX=100
DIMY=100
DIMZ=100
BG=0
FG=0
R=20
r=4

printn " Create synthetic imaged:"
printn "\t dimx=%1%" % DIMX
printn "\t dimy=%1%" % DIMY
printn "\t dimz=%1%" % DIMZ
printn "\t bg=%1%" % BG
printn "\t fg=%1%" % FG
printn "\t R=%1%"  % R
printn "\t r=%1%"  % r

ctobject.dimx = 60
ctobject.dimy = 60
ctobject.dimz = 30
ctobject.bg = 0
ctobject.fg = 100
ctobject.R = 20
ctobject.r = 4
ctobject.Create()
printn "\t\t Create an object of class DessinImage (torus_draw).\n"
torus_draw=DessinImage(&torus)

printn "\n\t\t Extreme maximum and minimum (BEFORE):\n"
printn "\t\t\t X min (GetXmin)=%1% "  % torus_draw.GetXmin()
printn "\t\t\t Y min (GetYmin)=%1% "  % torus_draw.GetYmin()
printn "\t\t\t Y min (GetZmin)=%1%\n" % torus_draw.GetZmin()
printn "\t\t\t X max (GetXmax)=%1% " % torus_draw.GetXmax()
printn "\t\t\t Y max (GetYmax)=%1% " % torus_draw.GetYmax()
printn "\t\t\t Y max (GetZmax)=%1% " % torus_draw.GetZmax()

Xmin=50
Ymin=50
Zmin=50
Xmax=70
Ymax=70
Zmax=70
printn "\t\t Make a Zoom (SetZoom).\n"
printn "\t\t\t Xmin=%1% "  % Xmin
printn "\t\t\t Ymin=%1% "  % Ymin
printn "\t\t\t Ymin=%1%\n" % Zmin
printn "\t\t\t Xmax=%1% " % Xmax
printn "\t\t\t Ymax=%1% " % Ymax
printn "\t\t\t Ymax=%1% " % Zmax
torus_draw.SetZoom(Xmin,Ymin,Zmin,Xmax,Ymax,Zmax)

printn "\n\t\t Extreme maximum and minimum (AFTER):\n"
printn "\t\t\t X min (GetXmin)=%1% "  % torus_draw.GetXmin()
printn "\t\t\t Y min (GetYmin)=%1% "  % torus_draw.GetYmin()
printn "\t\t\t Y min (GetZmin)=%1%\n" % torus_draw.GetZmin()
printn "\t\t\t X max (GetXmax)=%1% " % torus_draw.GetXmax()
printn "\t\t\t Y max (GetYmax)=%1% " % torus_draw.GetYmax()
printn "\t\t\t Y max (GetZmax)=%1% " % torus_draw.GetZmax()

OK=(Xmin==torus_draw.GetXmin())&&(Ymin==torus_draw.GetYmin()) && \
   (Zmin==torus_draw.GetZmin())&&(Xmax==torus_draw.GetXmax()) && \
   (Ymax==torus_draw.GetYmax())&&(Zmax==torus_draw.GetZmax())

