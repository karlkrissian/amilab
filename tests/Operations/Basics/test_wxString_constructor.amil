func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Create an object of class wxString(sString1 = wx.wxString()).\n"
sString1 = wx.wxString()

printn "Create an object of class wxString(sString2 = wx.wxString(\"hello world !!!\")).\n"
sString2 = wx.wxString("hello world !!!")

VAL1=sString1.c_str()
VAL2=sString2.c_str()

printn "\t Returns the sString1 value: - %1% -\n" % VAL1
printn "\t Returns the sString2 value: - %1% -\n" % VAL2

if((VAL1 != "") && (VAL2 != "hello world !!!")) {
  OK = 0
  printn  "\nERROR: The reading does not match the value written."
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

#quit

