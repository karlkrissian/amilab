#!/usr/bin/amilab

#SetDebugOn
#SetVerboseOn

NoMessageDialog(1)

# Hide main frame
ami.MainFrame.Show(0)

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# test_wxfilename_isok.amil
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check the following methods:
#                              - constructor
#                              - IsOK
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Constructor: MODE 3 - a directory name, a file name, a file extension - (file=wx.wxFileName(\"/tmp/\",\"karl\",\"txt\")).\n"
file=wx.wxFileName("./","test_wxfilename_file","amil")

print "Get the full path (file.GetFullPath()):\n"
VAL = file.GetFullPath()

print "\t The full path: - %1% -\n" % VAL

printn "Check if the filename is valid (file.IsOk()).\n"
if (file.IsOk()) {
  printn  "\t The filename is valid.\n"
} else  {
  OK=0
  printn  "\nERROR: IsOK failed.\n"
}

printn "Constructor: MODE 0 (file1=wx.wxFileName()).\n"
file1=wx.wxFileName()

print "Get the full path (file1.GetFullPath()):\n"
VAL1 = file1.GetFullPath()

print "\t The full path: - %1% -\n" % VAL1

printn "Check if the filename is valid (file1.IsOk()).\n"
if (file1.IsOk()) {
  OK=0
  printn  "\nERROR: IsOK failed.\n"
} else  {
  printn  "\t The filename is not valid.\n"
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

#quit

