func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Create an object of class wxString(sString1 = wx.wxString()).\n"
sString1 = wx.wxString()

printn "Returns the length of the sString2 (VAL1=sString1.Length()).\n"
VAL1=sString1.Length()

printn "\t sString1 length: - %1% -\n" % VAL1

printn "Create an object of class wxString(sString2 = wx.wxString(\"hello world !!!\")).\n"
sString2 = wx.wxString("hello world !!!")

printn "Returns the length of the sString2 (VAL2=sString1.Length()).\n"
VAL2=sString2.Length()

printn "\t sString2 length: - %1% -\n" % VAL2

if((VAL1 != 0) && (VAL2 != 15)) {
  OK = 0
  printn  "\nERROR: The length is incorrect."
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

