#!/usr/bin/amilab

#SetDebugOn
#SetVerboseOn

NoMessageDialog(1)

# Hide main frame
ami.MainFrame.Show(0)

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# test_wxfilename_assignhomedir.amil
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check the following methods:
#                              - constructor
#                              - AssignHomeDir
#                              - GetPath
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Constructor: MODE 0 (file=wx.wxFileName()).\n"
file=wx.wxFileName()

printn "AssignHomeDir: Sets this file name object to the home directory (file.AssignHomeDir()).\n"
file.AssignHomeDir()

VAL = file.GetHomeDir()

printn "\t The home directory is: - %1% -\n" % VAL

printn "\t *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** *** ***"

VAL8 = file.GetPath()
VAL9 = file._GetName()
VAL10 = file.GetExt()
VAL11 = file.GetVolume()
VAL12 = file.GetFullPath()
VAL13 = file.GetFullName()

printn "\t The path part of the filename (without the name or extension): - %1% -\n" % VAL8
printn "\t The name part of the filename (without extension): - %1% -\n" % VAL9
printn "\t The file name extension: - %1% -\n" % VAL10
printn "\t The string containing the volume for this file name: - %1% -\n" % VAL11
printn "\t The full path with name and extension: - %1% -\n" % VAL12
printn "\t The full name (including extension but excluding directories): - %1% -\n" % VAL13

if ((VAL8 != "/home/fsantana/") && (VAL9 != "") && (VAL10 != "") && (VAL11 != ""))  {
  OK=0;
  printn  "\nERROR: The AssignHomeDir failed."
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

#quit

