#!/usr/bin/amilab

#SetDebugOn
#SetVerboseOn

NoMessageDialog(1)

# Hide main frame
ami.MainFrame.Show(0)

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# test_wxString_replacefirst.amil
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check the following methods:
#                              - constructor
#                              - c_str
#                              - ReplaceFirst
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Create an object of class wxString(sString1 = wx.wxString()).\n"
sString1 = wx.wxString()

printn "Replace first occurrences of A by B(sString1.ReplaceFirst(\"A\", \"B\")).\n"
sString1.ReplaceFirst("A", "B")

VAL1=sString1.c_str()

printn "\t Returns the sString1 value: - %1% -\n" % VAL1

printn "Replace first occurrences of A by B(sString1.ReplaceFirst(\"\", \"\")).\n"
sString1.ReplaceFirst("", "")

VAL1=sString1.c_str()

printn "\t Returns the sString1 value: - %1% -\n" % VAL1

printn "Create an object of class wxString(sString2 = wx.wxString(\"hello world !!!\")).\n"
sString2 = wx.wxString("hello world !!!")

printn "Replace first occurrences of world by Karl(sString2.ReplaceFirst(\"world\", \"Karl\")).\n"
sString2.ReplaceFirst("world", "Karl")

VAL2=sString2.c_str()

printn "\t Returns the sString2 value: - %1% -\n" % VAL2

if(VAL2 != "hello Karl !!!") {
  OK = 0
  printn  "\nERROR: The string has not been replaced."
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

#quit

