#!/usr/bin/amilab

#SetDebugOn
#SetVerboseOn

NoMessageDialog(1)

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# test_wxfilename_absolute_relative.amil
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Check the following methods:
#                              - constructor
#                              - MakeAbsolute
#                              - MakeRelativeTo
#                              - IsAbsolute
#                              - IsRelative
#
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

func "ctest/ctest_config.amil"

OK = 1 # The test was successful

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

printn "Constructor: MODE 2 - a directory name, a file name - (file1=wx.wxFileName(\"../\",\"karl\")).\n"
file1=wx.wxFileName("../","karl")

print "Get the full path (file1.GetFullPath()):\n"
VAL1 = file1.GetFullPath()

print "\t The full path: - %1% -\n" % VAL1

printn "Make the file name absolute (file1.MakeAbsolute()).\n"
file1.MakeAbsolute()

print "Get the full path (file1.GetFullPath()):\n"
VAL1 = file1.GetFullPath()

print "\t The full path: - %1% -\n" % VAL1

printn "Check if the file name is absolute. (file1.IsAbsolute()).\n"
if (file1.IsAbsolute()) {
  printn  "\t The file name is absolute."
} else  {
  OK=0;
  printn  "\nERROR: the file name is not absolute."
}

printn "Make the file name relative (file1.MakeAbsolute()).\n"
file1.MakeRelativeTo()

print "Get the full path (file1.GetFullPath()):\n"
VAL1 = file1.GetFullPath()

print "\t The full path: - %1% -\n" % VAL1

printn "Check if the file name is relative. (file1.IsRelative()).\n"
if (file1.IsRelative()) {
  printn  "\t The file name is relative."
} else  {
  OK=0;
  printn  "\nERROR: the file name is not relative."
}

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

ctest.PrintTestResult( OK ) 

#quit

